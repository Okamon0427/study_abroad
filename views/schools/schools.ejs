  <%- include("../partials/header") %>

<div class="jumbotron">
  <h1 class="display-4">All Schools</h1>
</div>

<div class="row">
  <% if (schools && schools.length > 0) { %>
    <% schools.forEach(school => { %>
      <div class="col-md-3 col-sm-6">
        <a href="/schools/<%= school._id %>" class="card-link">
          <div class="card text-center">
            <img class="card-img-top" src="<%= school.image %>" alt="No Image">
            <div class="card-body">
              <h5 class="card-title">
                <%= school.name %>
              </h5>
              <% if (!school.averageRating) { %>
              <p>
                No Rating Yet
              </p>
              <% } %>
              <p>
                <span>
                  <% if (school.averageRating >= 1 &&school.averageRating < 1.5) { %>
                    ☆
                  <% } else if (school.averageRating >= 1.5 && school.averageRating < 2.5) { %>
                    ☆☆
                  <% } else if (school.averageRating >= 2.5 && school.averageRating < 3.5) { %>
                    ☆☆☆
                  <% } else if (school.averageRating >= 3.5 && school.averageRating < 4.5) { %>
                    ☆☆☆☆
                  <% } else if (school.averageRating >= 4.5 && school.averageRating <= 5) { %>
                    ☆☆☆☆☆
                  <% } %>
                </span>
              </p>
              <span class="badge badge-secondary mb-2">
                Like: <%= school.likes.length %>
              </span>
              <span class="badge badge-secondary mb-2">
                Review: <%= school.reviews.length %>
              </span>
            </div>
          </div>
        </a>
      </div>
    <% }); %>
  <% } else { %>
    <div class="container">
      <p class="h3">School not found</p>
    </div>
  <% } %>
</div>

<hr>
<a class="btn btn-primary" href="/schools/new" role="button">Add New School</a>

<%- include("../partials/footer") %>