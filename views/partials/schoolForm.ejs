<div class="col-md-6 m-auto">
  <div class="card bg-white p-4 mb-4">
    <div class="card-body">
      
      <% if (formContent === 'addSchool') { %> 
      <h1 style="text-align: center;">
        Add School
      </h1>
      <form action="/schools" method="POST" enctype="multipart/form-data">
      <% } %>

      <% if (formContent === 'editSchool') { %> 
      <h1 style="text-align: center;">
        Edit School
      </h1>
      <form action="/schools/<%= school._id %>?_method=PUT" method="POST" enctype="multipart/form-data">
      <% } %>

        <div class="form-group">
          <label for="name">School Name</label>
          <input
            type="text"
            class="form-control"
            id="name"
            name="name"
            placeholder="Harvard University"
            value="<%= typeof school != 'undefined' ? school.name : '' %>"
          >
        </div>

        <div class="form-group">
          <label for="country">Country</label>
          <input
            type="text"
            class="form-control"
            id="country"
            name="country"
            placeholder="United States of America"
            value="<%= typeof school != 'undefined' ? school.country : '' %>"
          >
        </div>
        
        <div class="form-group">
          <label for="image">Image</label>
          <input
            type="file"
            class="form-control"
            id="image"
            name="image"
            >
          </div>

          <div class="form-group">
            <label for="schoolType">Type</label>
            <select name="schoolType" id="schoolType" class="custom-select">
              <option value="College" selected>College</option>
              <option value="University">University</option>
              <option value="Language School">Language School</option>
              <option value="Other">Other</option>
            </select>
          </div>

          <div class="form-group">
            <label for="website">Website</label>
            <input
              type="text"
              class="form-control"
              id="website"
              name="website"
              placeholder="https://www.mygreatuniversity.com/"
              value="<%= typeof school != 'undefined' ? school.website : '' %>"
            >
          </div>

        <div class="form-group">
          <button type="submit" class="btn btn-primary btn-block">SUBMIT</button>
        </div>
      </form>
      
      <a href="/schools">Go back</a>
    </div>
  </div>
</div>